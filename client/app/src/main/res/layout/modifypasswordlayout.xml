<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEFF4">
    <RelativeLayout
        android:id="@+id/Rela_for_title1"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#11B7F3">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:background="@mipmap/arrow"
            android:onClick="Btn_Back_Mod" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="旧密码:"
        android:textSize="16sp"
        android:textColor="#777779"
        android:layout_marginBottom="6dp"
        />

        <EditText
            android:id="@+id/Modi_now_pass"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:hint="请输入你现在的密码"
            android:textCursorDrawable="@null"
            android:paddingLeft="15dp"
            android:textColorHint="#a4a4a4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="新密码:"
        android:textSize="16sp"
        android:textColor="#777779"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        />

    <EditText
        android:id="@+id/Modi_new_pass1"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:hint="新密码要求长度为6~16位"
        android:textCursorDrawable="@null"
        android:paddingLeft="15dp"
        android:textColorHint="#a4a4a4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="确认新密码:"
        android:textSize="16sp"
        android:textColor="#777779"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        />

    <EditText
        android:id="@+id/Modi_new_pass2"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:hint="新密码要求长度为6~16位"
        android:textCursorDrawable="@null"
        android:paddingLeft="15dp"
        android:textColorHint="#a4a4a4"/>

    <Button
        android:onClick="Sure_modify"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确定"
        android:background="#0177FD"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"/>
<RelativeLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="20dp">

    <CheckBox
        android:id="@+id/view_password"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#777779"
        android:text="显示密码"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他方式"
        android:textColor="#0177FD"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"/>
</RelativeLayout>

</LinearLayout>