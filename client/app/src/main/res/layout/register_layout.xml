<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    android:orientation="vertical">
    <!-- 顶部空白-->
    <RelativeLayout
        style="@style/layout_vertical"
        android:layout_weight="1">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:background="@mipmap/back_icon"
            android:onClick="Btn_Back_Res" />
    </RelativeLayout>

    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="3"
        android:orientation="vertical">
        <!-- 用户名-->
        <LinearLayout
            style="@style/layout_vertical"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <View
                style="@style/layout_horizontal"
                android:layout_weight="0.4" />

            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="2"
                android:background="@drawable/login_frame"
                android:orientation="horizontal">

                <ImageView
                    style="@style/layout_horizontal"
                    android:layout_margin="4dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/user" />

                <EditText
                    android:id="@+id/userName_Register_ET"
                    style="@style/layout_horizontal"
                    android:layout_weight="2"
                    android:background="#00000000"
                    android:hint="用户名"
                    android:textColor="#fff"
                    android:textColorHint="#dbdbdb"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <View
                style="@style/layout_horizontal"
                android:layout_weight="0.4" />
        </LinearLayout>
        <!-- 密码-->
        <View
            style="@style/layout_vertical"
            android:layout_weight="0.2" />

        <LinearLayout
            style="@style/layout_vertical"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <View
                style="@style/layout_horizontal"
                android:layout_weight="0.4" />

            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="2"
                android:background="@drawable/login_frame"
                android:orientation="horizontal">

                <ImageView
                    style="@style/layout_horizontal"
                    android:layout_margin="4dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/password" />

                <EditText
                    android:id="@+id/userPass_Register_ET1"
                    style="@style/layout_horizontal"
                    android:layout_weight="2"
                    android:background="#00000000"
                    android:hint="用户密码"
                    android:inputType="textPassword"
                    android:textColor="#fff"
                    android:textColorHint="#dbdbdb"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <View
                style="@style/layout_horizontal"
                android:layout_weight="0.4" />
        </LinearLayout>
        <!-- 确认密码-->
        <View
            style="@style/layout_vertical"
            android:layout_weight="0.2" />

        <LinearLayout
            style="@style/layout_vertical"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <View
                style="@style/layout_horizontal"
                android:layout_weight="0.4" />

            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="2"
                android:background="@drawable/login_frame"
                android:orientation="horizontal">

                <ImageView
                    style="@style/layout_horizontal"
                    android:layout_margin="4dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/password" />

                <EditText
                    android:id="@+id/userPass_Register_ET2"
                    style="@style/layout_horizontal"
                    android:layout_weight="2"
                    android:background="#00000000"
                    android:hint="确认密码"
                    android:inputType="textPassword"
                    android:textColor="#fff"
                    android:textColorHint="#dbdbdb"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <View
                style="@style/layout_horizontal"
                android:layout_weight="0.4" />
        </LinearLayout>
        <!-- 电话号码-->
        <View
            style="@style/layout_vertical"
            android:layout_weight="0.2" />

        <LinearLayout
            style="@style/layout_vertical"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <View
                style="@style/layout_horizontal"
                android:layout_weight="0.4" />

            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="2"
                android:background="@drawable/login_frame"
                android:orientation="horizontal">

                <ImageView
                    style="@style/layout_horizontal"
                    android:layout_margin="4dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/tel" />

                <EditText
                    android:id="@+id/userPhoneNum"
                    style="@style/layout_horizontal"
                    android:layout_weight="1.4"
                    android:background="#00000000"
                    android:hint="手机号码"
                    android:inputType="phone"
                    android:textColor="#fff"
                    android:textColorHint="#dbdbdb"
                    android:textCursorDrawable="@null" />

                <Button
                    android:id="@+id/send_mess"
                    style="@style/layout_horizontal"
                    android:layout_weight="0.6"
                    android:background="#fff"
                    android:onClick="Send_Mess"
                    android:text="获取验证码"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                style="@style/layout_horizontal"
                android:layout_weight="0.4" />
        </LinearLayout>
        <!-- 验证码-->
        <View
            style="@style/layout_vertical"
            android:layout_weight="0.2" />

        <LinearLayout
            style="@style/layout_vertical"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <View
                style="@style/layout_horizontal"
                android:layout_weight="0.4" />

            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="2"
                android:background="@drawable/login_frame"
                android:orientation="horizontal">

                <ImageView
                    style="@style/layout_horizontal"
                    android:layout_margin="4dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/number" />

                <EditText
                    android:id="@+id/userMessNum"
                    style="@style/layout_horizontal"
                    android:layout_weight="2"
                    android:background="#00000000"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:textColor="#fff"
                    android:textColorHint="#dbdbdb"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <View
                style="@style/layout_horizontal"
                android:layout_weight="0.4" />
        </LinearLayout>
        <!-- 按钮-->
        <View
            style="@style/layout_vertical"
            android:layout_weight="0.4" />


        <LinearLayout
            style="@style/layout_vertical"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <View
                style="@style/layout_horizontal"
                android:layout_weight="0.4" />

            <Button
                android:id="@+id/user_Register_Sure"
                style="@style/layout_horizontal"
                android:layout_weight="2"
                android:background="@drawable/login_btn_back"
                android:onClick="Sure_Register"
                android:text="注册"
                android:textSize="15sp" />

            <View
                style="@style/layout_horizontal"
                android:layout_weight="0.4" />
        </LinearLayout>
        <!-- 底部空白-->
        <LinearLayout
            style="@style/layout_vertical"
            android:layout_weight="3.8">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>